# SMX LiveBoard - Configuração Otimizada
# Este arquivo contém configurações para melhorar a performance

# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações de Performance
# Intervalos de coleta de dados (em milissegundos)
CPU_COLLECTION_INTERVAL=3000
MEMORY_COLLECTION_INTERVAL=3000
DISK_COLLECTION_INTERVAL=5000
PROCESS_COLLECTION_INTERVAL=10000
SERVICE_COLLECTION_INTERVAL=60000

# Configurações de Cache
ENABLE_METRICS_CACHE=true
METRICS_CACHE_TTL=2000

# Configurações de WebSocket
WEBSOCKET_RECONNECT_DELAY=3000
WEBSOCKET_MAX_RECONNECT_ATTEMPTS=5

# Configurações de Logs
LOG_LEVEL=info
ENABLE_PERFORMANCE_LOGS=true

# Configurações de Segurança
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# Configurações de Limites
MAX_PROCESSES_DISPLAY=10
MAX_HISTORY_POINTS=60
MAX_WEBSOCKET_CONNECTIONS=50
